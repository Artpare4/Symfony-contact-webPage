
<ul class="contacts">
    {% for contact in contacts %}
    <li class="contact" style="list-style: inside">
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_contact_update', {id : contact.id}) }}" class="material-symbols-outlined text-warning">edit</a><a href="{{ path('app_contact_delete', {id : contact.id}) }}" class="material-symbols-outlined text-danger">delete</a>
        {% endif %}
        <a class="name contact" href="{{ path('app_contact_show',{'id':contact.id})}}"><span class="lastname">{{ contact.lastname }}</span>, <span class="firstname">{{contact.firstname}}</span></a>
        {% if show_category??true and contact.category is not null %}
        <a class="nav-link" href="{{ path('app_category_show',{'id':contact.category.id}) }}">
                <span class="badge bg-secondary">{{ contact.category.name}}</span>
        </a>
        {% endif %}
    </li>
    {% endfor %}
</ul>

