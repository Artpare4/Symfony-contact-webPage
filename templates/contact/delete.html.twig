{% extends 'base.html.twig' %}
{% block title %}
    Suppression de {{contact.lastname}}, {{contact.firstname}}
{% endblock %}

{% block body %}
    <h1>Suppression de {{contact.lastname}}, {{contact.firstname}}</h1>
    {{ form_start(form,{attr:{class:'d-flex justify-content-around p-4'}}) }}
    {{ form_row(form.delete, {'label':'Delete',attr: {class: 'btn btn-primary'}}) }}
    {{ form_row(form.cancel, {'label':'Cancel',attr: {class: 'btn btn-secondary'}}) }}
    {{ form_end(form) }}
{% endblock %}