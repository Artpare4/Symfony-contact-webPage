{% extends 'base.html.twig' %}
{% block title %}
{{ contact.firstname }} {{ contact.lastname }}
{% endblock %}

{% block body %}
    <h1>{{ contact.firstname }} {{ contact.lastname }}</h1>
    <dl>
        <dt>Email: </dt>
        <dd>{{ contact.email }}</dd>
        <dt>Téléphone:</dt>
        <dd>{{ contact.phone }}</dd>
        <dt>Catégorie</dt>
        <dd>{{ contact.category.name ?? 'Empty'}}</dd>
    </dl>
{% endblock %}



